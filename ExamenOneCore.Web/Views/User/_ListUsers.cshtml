<style>
    table {
        font-family: 'Calibri';
        font-size: 15px;
        background-color: #fff;
        color: #333;
    }
</style>
<section class="Material-contact-section section-padding section-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-12 wow animated fadeInLeft" data-wow-delay=".2s">
                <h1 class="section-title">Listado de Usuarios</h1>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover table-responsive-md table-responsive-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Email</th>
                            <th>Sexo</th>
                            <th>Estatus</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="user in users">
                            <td>{{ user.UserId }}</td>
                            <td>{{ user.Usuario }}</td>
                            <td>{{ user.Email }}</td>
                            <td>
                                <div ng-if="user.Sexo == 'F' ">
                                    Femenino
                                </div>
                                <div ng-if="user.Sexo == 'M' ">
                                    Masculino
                                </div>
                            </td>
                            <td>
                                <div ng-if="user.Estatus == true ">
                                    SI
                                </div>
                                <div ng-if="user.Estatus == false ">
                                    NO
                                </div>
                            </td>
                            <td><button type="button" data-toggle="modal" data-target="#edit" data-uid="{{ user.UserId }}" class="update btn btn-primary btn-sm" ng-click="GetUser($index)">Editar</button></td>
                            <td><button type="button" data-toggle="modal" data-target="#delete" data-uid="{{ user.UserId }}" class="delete btn btn-danger btn-sm" ng-click="Delete($index)">Eliminar</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>